// the sage of winter, stands still but will walk around if he has a goal
Class mkSageNPC : Actor
{
	int scnt;

	override void Activate( Actor activator )
	{
		Super.Activate(activator);
		bSOLID = true;
		bINCOMBAT = false;
		bINVISIBLE = false;
		SetStateLabel("Spawn");
	}
	override void Deactivate( Actor activator )
	{
		Super.Deactivate(activator);
		bSOLID = false;
		bINCOMBAT = true;	// prevents dialogue
		bINVISIBLE = true;
		SetStateLabel("Inactive");
	}

	Default
	{
		//$Title Sage NPC
		//$Category Marisa/Decoration
		//$Sprite SAGEB1
		Speed 2;
		Radius 16;
		Height 64;
		MONSTER;
		+NEVERTARGET;
		+FRIENDLY;
		+NODAMAGE;
		-COUNTKILL;
		-SHOOTABLE;
	}
	States
	{
	Spawn:
		SAGE B 2;
		SAGE B 2 A_JumpIf(goal,"See");
		Loop;
	See:
		SAGE # 2
		{
			if ( goal )
			{
				if ( (scnt%12) < 6 ) frame = 1;
				else if ( (scnt%24) < 12 ) frame = 0;
				else frame = 2;
				scnt++;
				A_Chase(null,null);
			}
			return A_JumpIf(!goal,"Spawn");
		}
		Wait;
	Greetings:
		SAGE B 1;
		Goto Spawn;
	Inactive:
		TNT1 A -1;
		Stop;
	}
}

