Class mkDispelLight : PointLightAttenuated
{
	int cnt;

	Default
	{
		args 255, 32, 255, 600;
	}
	override void PostBeginPlay()
	{
		Super.PostBeginPlay();
		cnt = 300;
	}
	override void Tick()
	{
		Super.Tick();
		if ( target ) SetOrigin(target.Vec3Offset(0,0,7),true);
		else
		{
			args[3] = 1200;
			args[0] = int(255*(cnt/300.));
			args[1] = 0;
			args[2] = int(255*(cnt/300.));
			cnt--;
			if ( cnt <= 0 ) Destroy();
		}
	}
}

